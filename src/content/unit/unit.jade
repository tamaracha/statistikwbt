header.col-sm-3
  h2: a(data-ui-sref=".description" data-ng-bind="unit.unit|title")
  p {{unit.unit}}
  nav: ul.nav.nav-pills.nav-stacked
    li(data-ng-repeat="topic in unit.unit.topics" data-ui-sref-active="active"): a(data-ui-sref=".topic({topic: topic.title})" data-ng-bind="topic.title")
    li(data-ui-sref-active="active"): a(data-ui-sref=".test" data-ng-hide="unit.unit.tests.length===0") Test
main.col-sm-9(data-ui-view)