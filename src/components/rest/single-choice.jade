.form-group
  p(data-ng-bind="item.text")
  .radio(data-ng-repeat="choice in item.choices")
    label
      input(type="radio" name="{{item._id}}" data-ng-value="choice" data-ng-model="item.selected")
      span(data-ng-bind="choice.text")
  p(
    data-ng-show="form.$submitted"
    data-ng-bind="item.selected.feedback"
    data-ng-class="{'text-success': item.selected.correct,'text-warning': form[item._id].$dirty&&!item.selected.correct}"
  )