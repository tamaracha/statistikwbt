div(uib-collapse="topics.collapse"): form.form-horizontal(novalidate name="topics.form")
  .form-group
    label.col-xs-2.control-label(for="selectTopic") Subkapitel
    .col-xs-10
      select.form-control#selectTopic(
        ng-options="t.title for t in topics.topics track by t._id"
        ng-model="topics.selected"
        ng-change="topics.select()"
      )
        option(value="") Neues Subkapitel
  .form-group(ng-if="topics.selected")
    .col-xs-offset-2.col-xs-10: .button-group
      a.btn.btn-link(ui-sref="main.content.unit.topic({unit: units.selected._id, topic: topics.selected._id})") Anschauen
      button(type="button" ng-click="topics.move('up')")
        span.fa.fa-arrow-up
        span hoch
      button(type="button" ng-click="topics.move('down')")
        span.fa.fa-arrow-down
        span runter
      button.btn.btn-danger(type="button" ng-click="topics.remove()")
        span.fa.fa-times
        span löschen
h3
  span(ng-bind="topics.selected ? topics.selected.title : 'Neues Subkapitel anlegen'")
  button.btn.btn-default(type="button" ng-click="topics.collapse=!topics.collapse")
    span.fa.fa-toggle(ng-class="topics.collapse ? 'fa-toggle-on' : 'fa-toggle-off'" aria-hidden="true")
    span Übersicht {{topics.collapse ? 'einblenden' : 'ausblenden'}}
ui-view
